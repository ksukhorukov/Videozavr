<li>
  <span class="content"><%= video.watermark %></span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(video.created_at) %> ago.
  </span>
  <% if current_user?(video.user) %>
    <%= link_to "delete", video, method: :delete,
                                     data: { confirm: 'You sure?' },
                                     title: video.content %>
  <% end %>
</li>